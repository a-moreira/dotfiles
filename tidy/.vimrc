"""""""""""""""""""""""""""""""""""""
" Configuration Section
"""""""""""""""""""""""""""""""""""""

" Show linenumbers
set number
set ruler

" Set Proper Tabs
set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

set laststatus=2

" Remove status, since there is LightLine
set noshowmode


syntax on
filetype plugin indent on



"""""""""""""""""""""""""""""""""""""
" Plugin Section
"""""""""""""""""""""""""""""""""""""


set nocompatible              " be iMproved, required
filetype off                  " required
